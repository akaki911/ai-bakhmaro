{
  "name": "ai-bakhmaro",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "ai-frontend",
    "backend",
    "functions",
    "ai-service",
    "shared",
    "gateway"
  ],
  "scripts": {
    "dev": "concurrently -c cyan,magenta --names gateway,frontend \"npm run --workspace gateway dev\" \"npm run --workspace ai-frontend dev\"",
    "dev:all": "concurrently -c cyan,magenta,green --names frontend,backend,ai-service \"cd ai-frontend && npx vite --port 5000 --host 0.0.0.0\" \"cd backend && PORT=5002 npm start\" \"cd ai-service && BACKEND_URL=http://127.0.0.1:5002 PORT=5001 node server.js\"",
    "dev:frontend": "npm run --workspace ai-frontend dev",
    "dev:gateway": "npm run --workspace gateway dev",
    "build": "node scripts/run-workspace-build.mjs",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "type-check": "npm run --workspace ai-frontend type-check --if-present",
    "health-check": "node system-health-check.js",
    "test:integration": "./scripts/run-integration-tests.sh",
    "check:secrets-required": "node check-secrets.js",
    "lint-staged": "node scripts/run-lint-staged.js",
    "setup-hooks": "node setup-git-hooks.js"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "concurrently": "^9.2.1"
  },
  "pnpm": {
    "overrides": {
      "@opentelemetry/api": "1.7.0"
    }
  },
  "engines": {
    "node": ">=18 <=22"
  },
  "dependencies": {
    "@google-cloud/run": "^3.0.1",
    "@google/generative-ai": "^0.24.1",
    "isolated-vm": "^5.0.4",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  }
}
