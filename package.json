{
  "name": "ai-bakhmaro",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "ai-frontend",
    "backend",
    "functions",
    "ai-service",
    "shared",
    "gateway"
  ],
  "scripts": {
    "dev": "concurrently -c cyan,magenta --names gateway,frontend \"pnpm --filter gateway dev\" \"pnpm --filter ai-frontend dev\"",
    "dev:frontend": "pnpm --filter ai-frontend dev",
    "dev:gateway": "pnpm --filter gateway dev",
    "build": "node scripts/run-workspace-build.mjs",
    "lint": "npm run lint -ws --if-present",
    "test": "npm run test -ws --if-present",
    "type-check": "npm run type-check -w ai-frontend --if-present",
    "health-check": "node system-health-check.js",
    "test:integration": "./scripts/run-integration-tests.sh",
    "check:secrets-required": "node check-secrets.js",
    "lint-staged": "node scripts/run-lint-staged.js",

  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "concurrently": "^9.2.1"
  },
  "engines": {
    "node": ">=18 <=22"
  },
  "packageManager": "pnpm@10.19.0"
}
