{
  "name": "ai-bakhmaro",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "ai-frontend",
    "property-api",
    "gateway"
  ],
  "scripts": {
    "dev": "concurrently -c cyan,magenta,green --names gateway,property,frontend \"pnpm --filter gateway dev\" \"pnpm --filter property-api dev\" \"pnpm --filter ai-frontend dev\"",
    "dev:frontend": "pnpm --filter ai-frontend dev",
    "dev:property-api": "pnpm --filter property-api dev",
    "dev:gateway": "pnpm --filter gateway dev",
    "build": "node scripts/run-workspace-build.mjs",
    "lint": "pnpm -r --if-present run lint",
    "test": "pnpm -r --if-present run test",
    "type-check": "pnpm --filter ai-frontend --if-present run type-check",
    "check:secrets-required": "echo 'âœ… Secrets check skipped on CI environment'"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "concurrently": "^9.2.1"
  },
  "engines": {
    "node": ">=18 <=22"
  },
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8"
}
