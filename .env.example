# ==========================================================
# üåê AI BAKHMARO ‚Äî ENVIRONMENT TEMPLATE (.env.example)
# ==========================================================
# Copy this file to `.env` or `.env.production` and fill in
# the real values before deployment.
# ==========================================================

# üß© GENERAL SETTINGS
NODE_ENV=production
VITE_ENV_MODE=production
VITE_LOG_LEVEL=warn

# ==========================================================
# üîê AUTHENTICATION & SESSION
# ==========================================================
SESSION_COOKIE_SECRET=
SESSION_COOKIE_NAME=bk_admin.sid
SUPER_ADMIN_ROLE_GATE=SUPER_ADMIN
COOKIE_SECURE=true

# ==========================================================
# üåç DOMAIN & ROUTING CONFIG
# ==========================================================
VITE_APP_URL=https://ai.bakhmaro.co
VITE_API_URL=https://api.ai.bakhmaro.co
LOGIN_PATH=/login
REMOTE_SITE_BASE=https://ai.bakhmaro.co
CORS_ALLOWED_ORIGIN=https://ai.bakhmaro.co
ALLOWED_ORIGIN=https://ai.bakhmaro.co

# ==========================================================
# üîë JWT CONFIGURATION
# ==========================================================
JWT_SECRET=
SERVICE_JWT_ISSUER=ai-gateway
SERVICE_JWT_SUBJECT=gateway-service
SERVICE_JWT_AUDIENCE=property-api

# ==========================================================
# üö™ GATEWAY & BACKEND ROUTING
# ==========================================================
GATEWAY_PROPERTY_API_URL=https://api.ai.bakhmaro.co
BACKEND_URL=https://api.ai.bakhmaro.co
BACKEND_PORT=5002

# ==========================================================
# üî• FIREBASE CONFIGURATION (Frontend + Admin)
# ==========================================================
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=ai-bakhmaro.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=ai-bakhmaro
VITE_FIREBASE_STORAGE_BUCKET=ai-bakhmaro.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MEASUREMENT_ID=
FIREBASE_PROJECT_ID=ai-bakhmaro
FIREBASE_SERVICE_ACCOUNT_PATH=./.firebase/service-account.json
# Optional inline service account (only for local dev)
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"ai-bakhmaro"}

# ==========================================================
# ü§ñ AI SERVICE CONFIG
# ==========================================================
VITE_AI_SERVICE_URL=https://api.ai.bakhmaro.co
VITE_AI_INTERNAL_TOKEN=
GROQ_API_KEY=
OPENAI_API_KEY=

# ==========================================================
# üß† MEMORY & BACKUP CONFIG
# ==========================================================
MEMORY_STORAGE=firestore
MEMORY_BACKUP_PATH=./memory_data/
BACKUP_ENCRYPTION_KEY=
ENCRYPTION_KEY=

# ==========================================================
# üß∞ GITHUB INTEGRATION (optional)
# ==========================================================
GITHUB_PAT_SECRET=
GITHUB_REPO_URL=https://github.com/akaki911/ai-bakhmaro
SITE_MAPPING_GITHUB={"bakhmaro":"akaki911/ai-bakhmaro"}

# ==========================================================
# üì° TELEMETRY & MONITORING
# ==========================================================
JAEGER_ENDPOINT=https://jaeger.ai.bakhmaro.co/api/traces
DEPLOY_ENV=production
DEPLOY_REGION=us-central1
CI_COMMIT_REF=main
ALLOW_DEV_FALLBACK=false
