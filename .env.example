# AI Bakhmaro monorepo defaults for local development
# Copy this file to `.env` and customise as needed.

# Authentication & session
SESSION_COOKIE_SECRET=change-me-local-session
SUPER_ADMIN_ROLE_GATE=SUPER_ADMIN

# Gateway routing & security
GATEWAY_PROPERTY_API_URL=http://property-api:5100
REMOTE_SITE_BASE=http://ai-frontend:5173
LOGIN_PATH=/login
CORS_ALLOWED_ORIGIN=https://ai.bakhmaro.co
JWT_SECRET=local-development-secret-change-me
COOKIE_SECURE=false
SITE_MAPPING_GITHUB={"bakhmaro":"org/repo"}

# GitHub integration
GITHUB_PAT_SECRET=ghp_example_token
GITHUB_REPO_URL=https://github.com/org/repo

# Property API defaults
FIREBASE_PROJECT_ID=demo-bakhmaro
ALLOWED_ORIGIN=https://ai.bakhmaro.co
SERVICE_JWT_ISSUER=ai-gateway
SERVICE_JWT_SUBJECT=gateway-service
SERVICE_JWT_AUDIENCE=property-api

# Optional Firebase admin credentials (JSON string)
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"demo-bakhmaro"}
