# ==========================================================
# üåê AI SPACE FRONTEND ENVIRONMENT TEMPLATE (.env.example)
# ==========================================================
# Copy this file to `.env` (local dev) or `.env.production` (deployment)
# ==========================================================

# üß© GENERAL SETTINGS
VITE_ENV_MODE=production
VITE_LOG_LEVEL=info

# ==========================================================
# üåç FRONTEND DOMAIN CONFIGURATION
# ==========================================================
VITE_APP_NAME=Example AI Control Center
VITE_APP_URL=https://ai.bakhmaro.co
VITE_API_URL=https://ai.bakhmaro.co/api
VITE_GATEWAY_URL=https://ai.bakhmaro.co
VITE_ALLOW_DEV_FALLBACK=false

# ==========================================================
# üî• FIREBASE CONFIGURATION (REQUIRED)
# ==========================================================
VITE_FIREBASE_API_KEY=__REPLACE_ME_FIREBASE_API_KEY__
VITE_FIREBASE_AUTH_DOMAIN=__REPLACE_ME_FIREBASE_AUTH_DOMAIN__
VITE_FIREBASE_PROJECT_ID=__REPLACE_ME_FIREBASE_PROJECT_ID__
VITE_FIREBASE_STORAGE_BUCKET=__REPLACE_ME_FIREBASE_STORAGE_BUCKET__
VITE_FIREBASE_MESSAGING_SENDER_ID=__REPLACE_ME_FIREBASE_MESSAGING_SENDER_ID__
VITE_FIREBASE_APP_ID=__REPLACE_ME_FIREBASE_APP_ID__
VITE_FIREBASE_MEASUREMENT_ID=__REPLACE_ME_FIREBASE_MEASUREMENT_ID__

# ==========================================================
# üë§ AUTHENTICATION / ACCESS CONTROL
# ==========================================================
# Bootstrap token required for initial super admin provisioning
VITE_ADMIN_SETUP_TOKEN=__REPLACE_ME_ADMIN_SETUP_TOKEN__
VITE_AUTH_SESSION_COOKIE=ai-space.sid
VITE_SUPER_ADMIN_ID=__REPLACE_ME_SUPER_ADMIN_ID__
VITE_AUTH_ROLE_SUPER=SUPER_ADMIN
# WebAuthn relying party origin (scheme + host) for passkey ceremonies
VITE_ORIGIN=https://app.example.local
# WebAuthn relying party ID (host only) used during authenticator attestation
VITE_RP_ID=app.example.local
# Toggle to allow unauthenticated visitors to access the public chat surface
VITE_ENABLE_PUBLIC_CHAT=false

# ==========================================================
# ü§ñ AI DEVELOPER ASSISTANT CONFIGURATION
# ==========================================================
VITE_AI_SERVICE_URL=https://api.ai.bakhmaro.co/api/ai
VITE_AI_INTERNAL_TOKEN=__REPLACE_ME_AI_INTERNAL_TOKEN__
VITE_AI_MODEL=llama-3.1-70b-versatile
VITE_AI_PROVIDER=groq
VITE_AI_LANGUAGE=ka
VITE_AI_MEMORY_MODE=enabled
VITE_AI_CONSOLE_STREAM=true
# Presentation mode for the assistant experience (admin, guest, kiosk, etc.)
VITE_ASSISTANT_MODE=admin

# ==========================================================
# üß† MEMORY & BACKUP SYSTEM
# ==========================================================
VITE_MEMORY_STORAGE=firestore
VITE_MEMORY_BACKUP_PATH=/backups/memory
VITE_MEMORY_ENCRYPTION=true

# ==========================================================
# ‚öôÔ∏è FRONTEND BUILD / DEPLOYMENT
# ==========================================================
VITE_BUILD_TARGET=production
VITE_PUBLIC_PATH=/
VITE_SSR_MODE=false
VITE_AUTO_REFRESH=true

# ==========================================================
# üì° TELEMETRY & MONITORING
# ==========================================================
VITE_JAEGER_ENDPOINT=https://observability.example.local/jaeger/api/traces
VITE_ANALYTICS_ENABLED=true
VITE_SENTRY_DSN=https://examplePublicKey@o123456.ingest.sentry.io/1234567
VITE_DEBUG_MODE=false

# ==========================================================
# üß∞ OPTIONAL SERVICE CONNECTIONS
# ==========================================================
VITE_GITHUB_REPO=https://github.com/example-owner/example-repo
VITE_GITHUB_PAT_SECRET=ghp_example_token_placeholder
# Feature flag to enable GitHub workspace tooling in the admin UI
VITE_GITHUB_ENABLED=false
VITE_BACKUP_ENCRYPTION_KEY=__REPLACE_ME_BACKUP_ENCRYPTION_KEY__
VITE_ENCRYPTION_KEY=__REPLACE_ME_ENCRYPTION_KEY__
VITE_OPENAI_API_KEY=__REPLACE_ME_OPENAI_API_KEY__
VITE_GROQ_API_KEY=__REPLACE_ME_GROQ_API_KEY__
AI_INTERNAL_TOKEN=__REPLACE_ME_AI_INTERNAL_TOKEN__

# ==========================================================
# üåê BACKEND DISCOVERY
# ==========================================================
# Direct backend origin used by the SPA when calling authenticated APIs
VITE_BACKEND_URL=https://backend.ai.bakhmaro.co
# Base path for requests proxied through the gateway (e.g. /api)
VITE_API_BASE=https://backend.ai.bakhmaro.co/api
# Additional local debugging toggles for direct backend access
VITE_DEBUG_DIRECT_BACKEND=false
VITE_DIRECT_BACKEND_DEBUG=false
VITE_ENABLE_DIRECT_BACKEND_DEBUG=false
VITE_ALLOW_DIRECT_BACKEND_DEBUG=false
# Global fallback for tests and scripts hitting the AI service outside Vite
AI_SERVICE_URL=https://api.ai.bakhmaro.co/api/ai