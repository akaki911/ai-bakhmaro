# ==========================================================
# ‚öôÔ∏è CORE RUNTIME CONFIGURATION
# ==========================================================
NODE_ENV=production
PORT=5001
AI_PORT=5001

DISABLE_FILE_WATCHERS=false
AI_OFFLINE_MODE=false
DEBUG_MODE=false
VERBOSE_PERFORMANCE_LOGS=false

SESSION_SECRET=__REPLACE_ME_SESSION_SECRET__

# ==========================================================
# üîê INTERNAL AUTH & SECURITY
# ==========================================================
AI_INTERNAL_TOKEN=__REPLACE_ME_INTERNAL_TOKEN__
ADMIN_SETUP_TOKEN=__REPLACE_ME_ADMIN_TOKEN__

# ==========================================================
# üî• FIREBASE CONFIGURATION
# ==========================================================
FIREBASE_PROJECT_ID=ai-bakhmaro
FIREBASE_SERVICE_ACCOUNT=./serviceAccount.json
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccount.json

# ==========================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ==========================================================
DATABASE_URL=postgres://__USER__:__PASSWORD__@__HOST__:5432/__DB_NAME__

# ==========================================================
# ü§ñ OPENAI / GROQ CONFIGURATION
# ==========================================================
OPENAI_API_KEY=__REPLACE_ME_OPENAI_KEY__
OPENAI_FALLBACK_KEY=__REPLACE_ME_FALLBACK_OPENAI_KEY__
OPENAI_FALLBACK_MODEL=gpt-4o-mini
OPENAI_FALLBACK_MAX_TOKENS=800
OPENAI_FALLBACK_TEMPERATURE=0.7
FORCE_OPENAI_BACKUP=false

GROQ_API_KEY=__REPLACE_ME_GROQ_KEY__
GROQ_SMALL_MODEL=llama-3.1-8b-instant
GROQ_LARGE_MODEL=llama-3.3-70b-versatile
GROQ_LARGE_MODEL_THRESHOLD=220
GROQ_FORCE_MODEL=
GROQ_FALLBACK_MODE=false

# ==========================================================
# üíæ GITHUB INTEGRATION
# ==========================================================
GITHUB_TOKEN=__REPLACE_ME_GITHUB_TOKEN__
GITHUB_REPO_OWNER=akaki911
GITHUB_REPO_NAME=ai-bakhmaro
GITHUB_REPO_URL=https://github.com/akaki911/ai-bakhmaro.git
GITHUB_WEBHOOK_SECRET=__REPLACE_ME_GITHUB_WEBHOOK_SECRET__
AUTO_ISSUE_CREATION=true
AUTO_REMOVE_COLLABORATORS=false

# ==========================================================
# üì¶ BACKUP CONFIGURATION
# ==========================================================
PRIMARY_BACKUP_REPO=akaki911/ai-bakhmaro-backup
SECONDARY_BACKUP_REPO=akaki911/ai-bakhmaro-secondary
TERTIARY_BACKUP_REPO=akaki911/ai-bakhmaro-archive
BACKUP_ENCRYPTION_KEY=__REPLACE_ME_BACKUP_ENCRYPTION_KEY__

# ==========================================================
# üß† MEMORY CONFIGURATION
# ==========================================================
AI_MEMORY_ENABLED=true
MEMORY_STORAGE_PATH=./memory_data
MEMORY_FACTS_PATH=./memory_facts
USER_MEMORY_ENCRYPTION_KEY=__REPLACE_ME_USER_MEMORY_KEY__

# ==========================================================
# üìä MONITORING
# ==========================================================
JAEGER_ENDPOINT=https://ai.bakhmaro.co/jaeger/api/traces
PERFORMANCE_LOG_INTERVAL_MS=60000
MEMORY_CHECK_INTERVAL_MS=30000
MEMORY_WARNING_MB=500
METRICS_PORT=9091
