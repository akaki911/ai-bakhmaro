# ==========================================================
# üö™ GATEWAY SERVICE ENVIRONMENT (.env.example)
# Copy this file to `.env` or `.env.production` and
# replace CHANGE_ME placeholders with real values.
# ==========================================================

# ==========================================================
# ‚öôÔ∏è CORE RUNTIME CONFIGURATION
# ==========================================================
NODE_ENV=production
PORT=4000
HOST=0.0.0.0
SERVICE_NAME=ai-gateway
STATIC_ROOT=../ai-frontend/dist

# ==========================================================
# üåê ROUTING & ORIGINS
# ==========================================================
API_PROXY_BASE=https://backend.example.local
BACKEND_PROXY_BASE=https://backend.example.local
REMOTE_SITE_BASE=
UPSTREAM_API_URL=https://api.example.local
PUBLIC_ORIGIN=https://app.example.local
AI_DOMAIN=app.example.local
ROOT_DOMAIN=example.local
CORS_ALLOWED_ORIGIN=https://app.example.local,http://localhost:5173
LOGIN_PATH=/login

# ==========================================================
# üîê SECURITY & TOKENS
# ==========================================================
JWT_SECRET=example_gateway_jwt_secret_5f8a6c3b7e9041dab2f6c8d1a4e9f0b3
SERVICE_JWT_ISSUER=ai-gateway
SERVICE_JWT_SUBJECT=gateway-service
SERVICE_JWT_TTL=15m
COOKIE_SECURE=true
SESSION_COOKIE_NAMES=ai-space.sid,admin.sid,__Secure-admin.sid
SITE_MAPPING_GITHUB={"app.example.local":"apps/ai-frontend"}
CSP_SCRIPT_SRC=https://www.googletagmanager.com,https://www.google-analytics.com

# ==========================================================
# üìä TELEMETRY & MONITORING
# ==========================================================
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_CREDENTIALS=true

# ==========================================================
# üîê OPTIONAL FIREBASE ADMIN SUPPORT
# (Only required when using Firebase Admin middleware in gateway)
# ==========================================================
FIREBASE_PROJECT_ID=example-firebase-project
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-example@example-firebase-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nEXAMPLE_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"example-firebase-project","private_key_id":"examplefirebaseprivatekeyid2025","private_key":"-----BEGIN PRIVATE KEY-----\\nEXAMPLE_PRIVATE_KEY\\n-----END PRIVATE KEY-----\\n","client_email":"firebase-adminsdk-example@example-firebase-project.iam.gserviceaccount.com","client_id":"123456789012345678901"}
