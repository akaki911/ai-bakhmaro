# ==========================================================
# üö™ GATEWAY SERVICE ENVIRONMENT (.env.example)
# Copy this file to `.env` or `.env.production` and
# replace CHANGE_ME placeholders with real values.
# ==========================================================

# ==========================================================
# ‚öôÔ∏è CORE RUNTIME CONFIGURATION
# ==========================================================
NODE_ENV=production
PORT=4000
HOST=0.0.0.0
SERVICE_NAME=ai-gateway
STATIC_ROOT=../ai-frontend/dist

# ==========================================================
# üåê ROUTING & ORIGINS
# ==========================================================
API_PROXY_BASE=__REPLACE_ME_API_PROXY_BASE__
BACKEND_PROXY_BASE=__REPLACE_ME_BACKEND_PROXY_BASE__
REMOTE_SITE_BASE=
UPSTREAM_API_URL=__REPLACE_ME_UPSTREAM_API_URL__
PUBLIC_ORIGIN=__REPLACE_ME_PUBLIC_ORIGIN__
AI_DOMAIN=__REPLACE_ME_AI_DOMAIN__
ROOT_DOMAIN=__REPLACE_ME_ROOT_DOMAIN__
CORS_ALLOWED_ORIGIN=__REPLACE_ME_CORS_ALLOWED_ORIGIN__
LOGIN_PATH=/login

# ==========================================================
# üîê SECURITY & TOKENS
# ==========================================================
JWT_SECRET=__REPLACE_ME_JWT_SECRET__
SERVICE_JWT_ISSUER=ai-gateway
SERVICE_JWT_SUBJECT=gateway-service
SERVICE_JWT_TTL=15m
COOKIE_SECURE=true
SESSION_COOKIE_NAMES=ai-space.sid,admin.sid,__Secure-admin.sid
SITE_MAPPING_GITHUB={"app.example.local":"apps/ai-frontend"}
CSP_SCRIPT_SRC=https://www.googletagmanager.com,https://www.google-analytics.com

# ==========================================================
# üìä TELEMETRY & MONITORING
# ==========================================================
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_CREDENTIALS=true

# ==========================================================
# üîê OPTIONAL FIREBASE ADMIN SUPPORT
# (Only required when using Firebase Admin middleware in gateway)
# ==========================================================
FIREBASE_PROJECT_ID=__REPLACE_ME_FIREBASE_PROJECT_ID__
FIREBASE_CLIENT_EMAIL=__REPLACE_ME_FIREBASE_CLIENT_EMAIL__
FIREBASE_PRIVATE_KEY=__REPLACE_ME_FIREBASE_PRIVATE_KEY__
FIREBASE_SERVICE_ACCOUNT_KEY=__REPLACE_ME_FIREBASE_SERVICE_ACCOUNT_KEY__