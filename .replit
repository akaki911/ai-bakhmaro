modules = ["web", "bash", "python-3.12", "nodejs-20"]
hidden = [".config", "package-lock.json"]
run = "npm run dev"

[nix]
channel = "stable-25_05"
packages = ["jq", "zip"]

[objectStorage]
defaultBucketID = "replit-objstore-2671be20-ff2f-4b45-b882-bc823dc5b905"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["npm", "run", "start"]
build = ["npm", "run", "build"]
deploymentTarget = "autoscale"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 3003

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
