[env]
NODE_ENV = "development"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ai-service"

[[workflows.workflow]]
name = "frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ai-frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && npm start"
waitForPort = 8000

[[workflows.workflow]]
name = "ai-service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ai-service && npm start"
waitForPort = 8008

[workflows.workflow.metadata]
outputType = "console"

[unitTest]
language = "nodejs"

[agent]
expertMode = true
